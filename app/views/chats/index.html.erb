  <h1> Chats log</h1>
    <%= paginate @chats %>
    <table align="center" border width=80%>
      <thead>
        <tr>
          <th>Chat room</th>
          <th>Message</th>
          <th>User</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <% chat_room = @chat_rooms.find(chat.chat_room_id) %>
            <td><%= link_to chat_room.name, chat_room_path(chat_room.id) %></td>
            <td><%= chat.message %></td>
            <td>
              <% user = @users.find(chat.user_id) %>
              <%= user.name %>
            </td>
            <% if user_signed_in? %>
              <% if chat.user_id == current_user.id %>
                <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
                <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
                <td></td><td></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <br>
